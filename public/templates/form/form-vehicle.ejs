<label for=""></label>
<div class="row">
  <div class="col-sm-6">
    <div class="form-group" ng-class="{ 'has-error' : userForm.make.$invalid && !userForm.make.$pristine }">
      <label for="Make">Make:</label>
      <input class="form-control"
           name="make"
           placeholder="Holden"
           type="text"
           ng-model="userInput.vehicle.make"
           required>
      </input>
      <p ng-show="userForm.make.$invalid && !userForm.make.$pristine" class="help-block">Your car make is required.</p>
    </div>
  </div>

  <div class="col-sm-6">
    <div class="form-group" ng-class="{ 'has-error' : userForm.model.$invalid && !userForm.model.$pristine }">
      <label for="Model">Model:</label>
      <input class="form-control"
           name="model"
           placeholder="Astra"
           type="text"
           ng-model="userInput.vehicle.model"
           required>
      </input>
      <p ng-show="userForm.model.$invalid && !userForm.model.$pristine" class="help-block">Your car model is required.</p>
    </div>
  </div>
</div>

<div class="row">
  <div class="col-sm-6">
    <div class="form-group" ng-class="{ 'has-error' : userForm.year.$invalid && !userForm.year.$pristine }">
      <label for="Year">Year:</label>
      <input class="form-control"
           name="year"
           placeholder="2016"
           type="text"
           ng-model="userInput.vehicle.year"
           required>
      </input>
      <p ng-show="userForm.year.$invalid && !userForm.year.$pristine" class="help-block">Your car year is required.</p>
    </div>
  </div>

  <div class="col-sm-6">
    <div class="form-group" ng-class="{ 'has-error' : userForm.value.$invalid && !userForm.value.$pristine }">
      <label for="">Car Value:</label>

    <div class="input-group">
      <div class="input-group-addon"><span class="glyphicon glyphicon-usd"></span></div>
      <input class="form-control"
           name="value"
           type="text"
           ng-model="userInput.vehicle.value"
           required>
      </input>
    </div>

      <p ng-show="userForm.value.$invalid && !userForm.value.$pristine" class="help-block">Your car's value is required.</p>
    </div>
  </div>
</div>

<div class="row">
  <div class="col-sm-4 col-sm-offset-2">
    <button  ui-sref="form.quote-options" 
          class="btn btn-block btn-info">
          Previous
    </button>
  </div>

  <div class="col-sm-4">
    <button  ui-sref="form.risk"
          class="btn btn-block btn-info"
          ng-click="removeClass(4)"
          ng-disabled="!userForm.$valid || userForm.$pristine">
          Next
    </button>
  </div>
</div>





